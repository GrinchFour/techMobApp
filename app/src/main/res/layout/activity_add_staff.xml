<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".AddStaffActivity">

    <TextView
        android:id="@+id/staff_add_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Новый сотрудник"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <ScrollView
        android:id="@+id/my_scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="34dp"
        android:layout_height="534dp"
        app:layout_constraintTop_toBottomOf="@+id/button_back" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/enter_position_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Должность"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/edit_position_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Название должности"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_position_text" />

            <TextView
                android:id="@+id/enter_department_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Отдел"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_position_enter" />
            <EditText
                android:id="@+id/edit_department_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Название отдела"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_department_text" />

            <TextView
                android:id="@+id/enter_name_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Имя"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_department_enter" />
            <EditText
                android:id="@+id/edit_name_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Введите имя"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_name_text" />

            <TextView
                android:id="@+id/enter_lastName_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Фамилия"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name_enter" />
            <EditText
                android:id="@+id/edit_lastName_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Введите фамилию"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_lastName_text" />

            <TextView
                android:id="@+id/enter_login_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Логин"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_lastName_enter" />
            <EditText
                android:id="@+id/edit_login_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Придумайте логин"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_login_text" />

            <TextView
                android:id="@+id/enter_password_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Пароль"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_login_enter" />
            <EditText
                android:id="@+id/edit_password_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Придумайте пароль"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_password_text" />

            <TextView
                android:id="@+id/enter_email_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Почта"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_password_enter" />
            <EditText
                android:id="@+id/edit_email_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Введите почту"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_email_text" />

            <TextView
                android:id="@+id/enter_accRole_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Роль"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_email_enter" />
            <EditText
                android:id="@+id/edit_accRole_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:hint="Введите роль аккаунта"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_accRole_text" />

            </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_confirmSave"
        android:layout_marginTop="72dp"
        android:layout_width="328dp"
        android:layout_height="59dp"
        android:backgroundTint="#004CFF"
        android:fontFamily="@font/raleway"
        android:text="Сохранить"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_scroll" />

</androidx.constraintlayout.widget.ConstraintLayout>