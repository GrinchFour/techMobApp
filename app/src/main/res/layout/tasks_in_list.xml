<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:layout_marginBottom="20dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/bTaskInList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/fullName_text"
            android:layout_width="match_parent"
            android:fontFamily="@font/raleway_bold"
            android:text="Чехов"
            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/department_text"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="textEnd"
            android:fontFamily="@font/raleway"
            android:text="Отдел кадров"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/idStaff_text"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_extralight"
            android:text="id 1234567890"
            android:textColor="#000000"
            android:textSize="12sp" />

    </GridLayout>

</LinearLayout>