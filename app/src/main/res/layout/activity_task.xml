<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TaskActivity">

    <TextView
        android:id="@+id/fullName_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Фамилия"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/department_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/raleway"
        android:text="Отдел ..."
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName_label" />

    <TextView
        android:id="@+id/idStaff_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/nunito_sans_extralight"
        android:text="id 1234567890"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName_label" />

    <TextView
        android:id="@+id/dcTask_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/raleway"
        android:text="У меня произошла поломка компьютера, экран чёрный, кнопка включения не работает, срочно нужно всё починить! У меня произошла поломка компьютера, экран чёрный, кнопка включения не работает, срочно нужно всё починить! У меня произошла поломка компьютера, экран чёрный, кнопка включения не работает, срочно нужно всё починить! У меня произошла поломка компьютера, экран чёрный, кнопка включения не работает, срочно нужно всё починить!"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/department_text" />

    <ImageView
        android:id="@+id/imageHigh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dcTask_text"/>

    <Button
        android:id="@+id/button_complete"
        android:layout_width="328dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"
        android:backgroundTint="#004CFF"
        android:fontFamily="@font/raleway"
        android:text="Завершить заявку"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHigh"/>

</androidx.constraintlayout.widget.ConstraintLayout>