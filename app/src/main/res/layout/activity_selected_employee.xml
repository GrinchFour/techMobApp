<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SelectedEmployeeActivity">

    <TextView
        android:id="@+id/selected_empl_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Чехов"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <ScrollView
        android:id="@+id/my_scroll_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/selected_empl_label" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_idUser_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Id"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_idUser_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="id 1234567890"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_position_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Должность"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_position_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="Начальник"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_department_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Отдел"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_department_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="Отдел кадров"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_name_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Имя"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_name_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="Антон"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_lastName_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Фамилия"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_lastName_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="Чехов"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_email_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Почта"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_email_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="gmail@example.com"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_login_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Логин"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_login_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="exampleLogin"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_password_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Пароль"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_password_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="examplePass123"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/selected_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Номер телефона"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/selected_phone_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/raleway"
                android:gravity="start|top"
                android:text="81234567890"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>